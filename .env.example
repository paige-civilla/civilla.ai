# Database
DATABASE_URL=postgresql://user:password@host:port/database

# Session
SESSION_SECRET=generate-a-random-secret-here

# AI / OpenAI
OPENAI_API_KEY=sk-...

# Stripe (optional - for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PREMIUM=price_...

# AWS S3 / Cloudflare R2 (optional - for file storage)
R2_ACCOUNT_ID=...
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_BUCKET_NAME=...
R2_ENDPOINT=https://...

# Google Cloud Vision (optional - for OCR)
GOOGLE_CLOUD_VISION_KEY_FILE=/path/to/keyfile.json

# Cloudflare Turnstile (optional - for CAPTCHA)
TURNSTILE_SITE_KEY=...
TURNSTILE_SECRET_KEY=...

# Replit (auto-configured in Replit)
REPLIT_DOMAINS=your-app.replit.app
PORT=5000
NODE_ENV=development

# Frontend URL (optional - for CORS)
FRONTEND_URL=http://localhost:5173

# Logging (optional)
LOG_LEVEL=info